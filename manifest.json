{
  "manifest_version": 3,
  "name": "Pause Blocker",
  "version": "1.0",
  "description": "Prevents auto-pause when switching tabs",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["*://*/*"],
  "options_ui": {
    "page": "index.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
